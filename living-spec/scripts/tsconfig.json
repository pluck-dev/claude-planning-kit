{
  "extends": "../tsconfig.json",
  "compilerOptions": {
    "module": "commonjs",
    "moduleResolution": "node",
    "target": "ES2020",
    "outDir": "../.scripts-dist",
    "noEmit": true,
    "esModuleInterop": true,
    "paths": {
      "@/*": ["../src/*"]
    }
  },
  "include": [
    "./**/*.ts"
  ],
  "exclude": [
    "../node_modules"
  ]
}
